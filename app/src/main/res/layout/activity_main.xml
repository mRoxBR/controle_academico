<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufop.ControleAcademico.main.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#EFEFEF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controle Acadêmico"
        android:textSize="50dp"
        android:fontFamily="@font/agency_fb"
        android:background="#D3D3D3"
        android:layout_marginBottom="125dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:text="Disciplinas"
            android:background="@drawable/rounded_button_disciplina"
            android:onClick="startDisciplinas"
            android:layout_margin="5dp"
            android:fontFamily="@font/agency_fb"
            android:textSize="25sp"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:text="Gráficos"
            android:background="@drawable/rounded_button_grafico"
            android:onClick="startGraficos"
            android:layout_margin="5dp"
            android:fontFamily="@font/agency_fb"
            android:textSize="25sp"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:text="Tarefas"
            android:background="@drawable/rounded_button_tarefa"
            android:onClick="startTarefas"
            android:layout_margin="5dp"
            android:fontFamily="@font/agency_fb"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>